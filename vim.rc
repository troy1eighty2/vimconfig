" syntax highlighting                                                                             
syntax on

set fileformat=unix
set encoding=UTF-8

set relativenumber
set cursorline
set scrolloff=10
set signcolumn=yes
set showcmd
set noswapfile
set clipboard=unnamedplus
set smartcase
set incsearch
set hlsearch

" # spaces that represent a tab
set tabstop=2
" # spaces used when pressing tab
set softtabstop=2
" # spaces inserted when autoindenting
set shiftwidth=2
set autoindent
set smartindent
set smarttab
" concert tab char to spaces
set expandtab
set nowrap

set termguicolors
colorscheme habamax
set background=dark
